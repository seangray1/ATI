<aura:component controller="NewJobController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global" >
    <aura:attribute name="isPhone" type="Boolean" default="false"/>   
    <aura:attribute name="isDesktop" type="Boolean" default="true"/>   
    <aura:attribute name="recordId" type="Id" description="This attribute is for getting record id"/>
    <aura:if isTrue="{!v.isDesktop}"> 
<p style="width:100%; font-size:20px; text-align:center;margin: 45px 0 20px 0;"> Will the cloned job be related to this existing job ?</p><br/>
    <div style="width:100%; text-align:center;"><button style="padding: 3px 40px;margin-right: 20px;" class="slds-button slds-button_brand" onclick="{!c.gotoCloneATILT}">Yes</button>
    <button style="padding: 3px 40px;" class="slds-button slds-button_neutral" onclick="{!c.closeForm}">Cancel</button></div>
    </aura:if>

   
    <!-- <aura:handler name="init" value="{!this}" action="{!c.doInit}" /> -->
    <aura:if isTrue="{!v.isPhone}">
     <c:afterHoursJobLWC onrecordChange="{!c.refreshView}" oncloseform="{!c.closeForm}" recordId="{!v.recordId}"/>
    </aura:if>
</aura:component>