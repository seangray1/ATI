<aura:component implements="force:appHostable,lightning:actionOverride,force:hasRecordId,flexipage:availableForAllPageTypes,force:hasSObjectName,force:lightningQuickActionWithoutHeader" access="global">
<aura:attribute type="boolean" name="ProjectNoteClicked" default="false"></aura:attribute>    
<aura:attribute type="boolean" name="CloneJob" default="false"></aura:attribute>
<aura:attribute type="boolean" name="EditAccountRoles" default="false"></aura:attribute>     
<c:accountRolesDataTable onEditAccountRoles="{!c.EditAccountRoles}" aura:id="accountRolesDataTable" recordId = "{!v.recordId}" ></c:accountRolesDataTable>
<br>
</br>

    <aura:if isTrue="{!v.EditAccountRoles}">
        <div class="slds-m-around_xx-large">
                <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                    <div class="slds-modal__container" style="width: 80%">
                        <!-- Modal/Popup Box Header Starts here-->
                        <header class="slds-modal__header">
                            <lightning:buttonIcon iconName="utility:close"
                                                  onclick="{!c.CloseEditAccountRoles }"
                                                  alternativeText="close"
                                                  variant="bare-inverse"
                                                  class="slds-modal__close"/>
                            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Account Roles</h2>
                        </header>
                        <!--Modal/Popup Box Body Starts here-->
                        <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-3">
                            <!-- <c:projectNote recordId = "{!v.recordId}" onClose="{!c.Close}" onProjectNoteSubmitted="{!c.ProjectNoteSubmitted}"></c:projectNote>     -->
                                <!-- <c:accountRolesEditLWC recordId = "{!v.recordId}" onCloseEditAccountRoles="{!c.CloseEditAccountRoles}" onEditAccountRoles="{!c.EditAccountRolesSubmitted}"></c:accountRolesEditLWC>     -->
                            <c:accountRolesEditLWC onEditAccountRolesSubmit="{!c.EditAccountRolesSubmitted}" onEditAccountRolesClose="{!c.CloseEditAccountRoles}" recordId="{!v.recordId}"></c:accountRolesEditLWC>
                            
                        </div>
                        <!--Modal/Popup Box Footer Starts here-->
                    </div>
                </section>
                <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
    </aura:if>
</aura:component>