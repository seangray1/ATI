<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>XASP_ID_Validation</fullName>
    <active>true</active>
    <description>Verifies that XASP Transaction IDs don&apos;t contain \ / &quot; : &lt; # &gt; | * ? + and that they don&apos;t end with a period or start/end with a space.</description>
    <errorConditionFormula>OR(CONTAINS(XASP_Transaction_ID__c  , &apos;\\&apos;),CONTAINS(XASP_Transaction_ID__c  , 
&apos;#&apos;),CONTAINS(XASP_Transaction_ID__c  , 
&apos;/&apos;),CONTAINS(XASP_Transaction_ID__c  , &apos;:&apos;),CONTAINS(XASP_Transaction_ID__c  , &apos;&lt;&apos;),CONTAINS(Job_Name__c , &apos;&gt;&apos;),CONTAINS(XASP_Transaction_ID__c  , &apos;|&apos;),CONTAINS(XASP_Transaction_ID__c  , &apos;*&apos;),CONTAINS(XASP_Transaction_ID__c  , &apos;?&apos;),CONTAINS(XASP_Transaction_ID__c  , &apos;+&apos;),CONTAINS(XASP_Transaction_ID__c  , &apos;&quot;&apos;), BEGINS(XASP_Transaction_ID__c , &apos; &apos;),(RIGHT(XASP_Transaction_ID__c , 1)=&apos; &apos;),(RIGHT(XASP_Transaction_ID__c , 1)=&apos;.&apos;))</errorConditionFormula>
    <errorDisplayField>XASP_Transaction_ID__c</errorDisplayField>
    <errorMessage>XASP Transaction ID cannot contain \ / &quot; : &lt; &gt; | * ? + and also cannot end with a period or start/end with a space.</errorMessage>
</ValidationRule>
