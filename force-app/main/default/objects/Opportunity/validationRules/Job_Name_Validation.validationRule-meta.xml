<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Job_Name_Validation</fullName>
    <active>true</active>
    <description>Verifies that job names don&apos;t contain \ / &quot; : &lt; &gt; | * ? + and that they don&apos;t end with a period or start/end with a space.</description>
    <errorConditionFormula>OR(CONTAINS(Job_Name__c , &apos;\\&apos;),CONTAINS(Job_Name__c , &apos;/&apos;),CONTAINS(Job_Name__c , &apos;:&apos;),CONTAINS(Job_Name__c , &apos;&lt;&apos;),CONTAINS(Job_Name__c , &apos;&gt;&apos;),CONTAINS(Job_Name__c , &apos;|&apos;),CONTAINS(Job_Name__c , &apos;*&apos;),CONTAINS(Job_Name__c , &apos;?&apos;),CONTAINS(Job_Name__c , &apos;+&apos;),CONTAINS(Job_Name__c , &apos;&quot;&apos;), BEGINS(Job_Name__c, &apos; &apos;),(RIGHT(Job_Name__c, 1)=&apos; &apos;),(RIGHT(Job_Name__c, 1)=&apos;.&apos;))</errorConditionFormula>
    <errorDisplayField>Job_Name__c</errorDisplayField>
    <errorMessage>Job names cannot contain \ / &quot; : &lt; &gt; | * ? + and also cannot end with a period or start/end with a space.</errorMessage>
</ValidationRule>
