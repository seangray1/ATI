<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Pending_Change_Order_Fields</fullName>
    <active>true</active>
    <description>If there are pending change orders, require Approved Change Order question.</description>
    <errorConditionFormula>ISPICKVAL(  Are_there_Change_Orders__c  ,&quot;Yes&quot;) &amp;&amp;
ISBLANK(TEXT(   Are_Change_Orders_approved__c ))</errorConditionFormula>
    <errorDisplayField>Are_Change_Orders_approved__c</errorDisplayField>
    <errorMessage>Required: Are the Change Orders approved?</errorMessage>
</ValidationRule>
